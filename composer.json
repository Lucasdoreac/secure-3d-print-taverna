{
  "name": "lucasdoreac/secure-3d-print-taverna",
  "description": "Plataforma de e-commerce para serviços de impressão 3D com arquitetura segura, fluxos de proteção CSRF, validação robusta de entrada e sanitização de saída.",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^8.2",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "phpmd/phpmd": "^2.13"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse app/ --level=5",
    "phpcs": "phpcs --standard=PSR12 app/",
    "phpmd": "phpmd app/ text unusedcode,naming,design",
    "security-check": [
      "@phpstan",
      "@phpcs",
      "@phpmd"
    ],
    "pre-deploy-check": [
      "@test",
      "@security-check"
    ]
  },
  "config": {
    "process-timeout": 600,
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}